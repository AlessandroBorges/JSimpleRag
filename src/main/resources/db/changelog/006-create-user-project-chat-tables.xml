<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- User Table -->
    <changeSet id="006-001-create-user-table" author="jsimplerag">
        <createTable tableName="user">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="nome" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ativo" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <rollback>
            DROP TABLE IF EXISTS user;
        </rollback>
    </changeSet>

    <!-- User Library Association Table -->
    <changeSet id="006-002-create-user-library-table" author="jsimplerag">
        <createTable tableName="user_library">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="library_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="tipo_associacao" type="tipo_associacao">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- Foreign Keys -->
        <addForeignKeyConstraint
            baseTableName="user_library"
            baseColumnNames="user_id"
            constraintName="fk_user_library_user"
            referencedTableName="user"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint
            baseTableName="user_library"
            baseColumnNames="library_id"
            constraintName="fk_user_library_library"
            referencedTableName="library"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <!-- Unique constraint: one user can have only one association type per library -->
        <addUniqueConstraint
            tableName="user_library"
            columnNames="user_id, library_id"
            constraintName="unique_user_library"/>

        <rollback>
            DROP TABLE IF EXISTS user_library;
        </rollback>
    </changeSet>

    <!-- Chat Project Table -->
    <changeSet id="006-003-create-chat-project-table" author="jsimplerag">
        <createTable tableName="chat_project">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="biblioteca_privativa" type="UUID"/>
            <column name="titulo" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)"/>
            <column name="metadata" type="JSONB"/>
            <column name="user_uuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="ordem" type="INTEGER"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <rollback>
            DROP TABLE IF EXISTS chat_project;
        </rollback>
    </changeSet>

    <!-- Chat Table -->
    <changeSet id="006-004-create-chat-table" author="jsimplerag">
        <createTable tableName="chat">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_uuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="biblioteca_privativa" type="UUID"/>
            <column name="metadata" type="JSONB"/>
            <column name="resumo" type="TEXT"/>
            <column name="titulo" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <rollback>
            DROP TABLE IF EXISTS chat;
        </rollback>
    </changeSet>

    <!-- Chat Message Table -->
    <changeSet id="006-005-create-chat-message-table" author="jsimplerag">
        <createTable tableName="chat_message">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="ordem" type="INTEGER"/>
            <column name="metadata" type="JSONB"/>
            <column name="mensagem" type="TEXT"/>
            <column name="response" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- Foreign Key -->
        <addForeignKeyConstraint
            baseTableName="chat_message"
            baseColumnNames="chat_id"
            constraintName="fk_chat_message_chat"
            referencedTableName="chat"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <rollback>
            DROP TABLE IF EXISTS chat_message;
        </rollback>
    </changeSet>

</databaseChangeLog>
