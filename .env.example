# JSimpleRag Environment Configuration Template
# Copy this file to .env and adjust the values for your environment

# ======================================
# Database Configuration
# ======================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rag_db
DB_USERNAME=rag_user
DB_PASSWORD=rag_pass

# ======================================
# LLM Provider Configuration
# ======================================

# Primary LLM Provider
# Examples:
# - OpenAI: com.openai.LLMServiceImpl
# - Anthropic: com.anthropic.LLMServiceImpl
# - Local: com.local.LLMServiceImpl
LLM_PROVIDER_CLASS=

# Available models for the provider
LLM_MODELS=gpt-3.5-turbo,gpt-4

# Embedding model
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# Optional Secondary Provider
#LLM_PROVIDER2_CLASS=
#LLM_MODELS2=
#EMBEDDING_MODEL2=
#EMBEDDING_DIMENSION2=

# ======================================
# API Keys and Authentication
# ======================================

# OpenAI API Key (if using OpenAI provider)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (if using Anthropic provider)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Other provider-specific keys
# CUSTOM_LLM_API_KEY=your-custom-api-key-here

# ======================================
# Application Configuration
# ======================================

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Logging Level
LOG_LEVEL=DEBUG
WEB_LOG_LEVEL=INFO
SQL_LOG_LEVEL=DEBUG
HIBERNATE_BINDER_LOG=TRACE
LIQUIBASE_LOG_LEVEL=INFO

# ======================================
# RAG Configuration
# ======================================

# Document Processing
CHUNK_SIZE_MAX=2000
CHAPTER_SIZE_DEFAULT=8000

# Asynchronous Processing
ASYNC_CORE_POOL=2
ASYNC_MAX_POOL=5
ASYNC_QUEUE_CAPACITY=100
ASYNC_SCHEDULE_DELAY=300000

# Embedding Generation
EMBEDDING_BATCH_SIZE=100
EMBEDDING_TIMEOUT=30

# Search Configuration
DEFAULT_SEMANTIC_WEIGHT=0.60
DEFAULT_TEXTUAL_WEIGHT=0.40
DEFAULT_SEARCH_LIMIT=10

# ======================================
# Development Configuration
# ======================================

# Show SQL queries in development
SHOW_SQL=true

# ======================================
# Production Overrides
# ======================================
# For production deployment, override these values:

# Security
# SPRING_PROFILES_ACTIVE=prod
# LOG_LEVEL=INFO
# SHOW_SQL=false

# Performance
# ASYNC_CORE_POOL=4
# ASYNC_MAX_POOL=10

# Database
# Use production database credentials
# DB_HOST=prod-postgres-host
# DB_PASSWORD=secure-production-password